<main>
  <h1><%= title %></h1>

  <% if (messages && messages.length > 0) { %>
    <div class="flash-message">
      <% messages.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <!-- Account-specific links -->
  <% if (isAdminOrEmployee) { %>
    <ul class="management-links">
      <li><a href="/inv/add-classification">Add New Classification</a></li>
      <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
    </ul>
  <% } %>

  <!-- Greeting for all logged-in users -->
  <h2>Welcome <%= accountData.account_firstname %></h2>

  <!-- Inventory management section only for Employee/Admin -->
  <% if (isAdminOrEmployee) { %>
    <h3>Inventory Management</h3>
    <p>
      <a href="/inv">Go to Inventory Management</a>
    </p>
    <%- classificationSelect %>
    <table id="inventoryDisplay"></table>
  <% } else { %>
    <p>You do not have permission to manage inventory.</p>
  <% } %>

  <noscript>JavaScript must be enabled to use this page.</noscript>
  <script src="../../js/inventory.js"></script>
</main>
