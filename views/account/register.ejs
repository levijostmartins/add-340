<main>
  <h1><%= title %></h1>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (messages) { %>
    <% if (Array.isArray(messages) && messages.length > 0) { %>
      <div class="flash-message">
        <% messages.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } else if (typeof messages === 'string') { %>
      <div class="flash-message">
        <p><%= messages %></p>
      </div>
    <% } %>
  <% } %>

  <form action="/account/register" method="post" class="register-form" novalidate>
    <!-- First Name -->
    <label for="account_firstname">First Name</label>
    <input type="text" id="account_firstname" name="account_firstname" 
           value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>" 
           placeholder="Enter your first name" required>

    <!-- Last Name -->
    <label for="account_lastname">Last Name</label>
    <input type="text" id="account_lastname" name="account_lastname" 
           value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>" 
           placeholder="Enter your last name" required>

    <!-- Email -->
    <label for="account_email">Email Address</label>
    <input type="email" id="account_email" name="account_email" 
           value="<%= typeof account_email !== 'undefined' ? account_email : '' %>" 
           placeholder="Enter a valid email address" required>

    <!-- Password -->
    <label for="account_password">Password</label>
    <span class="password-hint">
      Passwords must be at least 12 characters long, include 1 uppercase letter, 1 number, and 1 special character.
    </span>
    <input type="password" id="account_password" name="account_password" 
           placeholder="Enter a strong password" required
           pattern="^(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{12,}$">
    
    <button type="button" id="togglePassword">Show/Hide Password</button>
    <button type="submit">Register</button>
  </form>

  <p class="login-link">
    Already have an account? <a href="/account/login">Login here</a>
  </p>
</main>

<script>
  const toggleBtn = document.getElementById("togglePassword");
  const passwordInput = document.getElementById("account_password");

  toggleBtn.addEventListener("click", () => {
    passwordInput.type = passwordInput.type === "password" ? "text" : "password";
  });
</script>
